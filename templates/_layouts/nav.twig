<header class="bg-white shadow-md mb-8 xs:px-2 lg:px-6 xs:py-2 pd:py-6 lg:py-8 bg-no-repeat bg-cover bg-[url('/images/header-bkg.jpg')]">
    <div class="container mx-auto flex justify-between items-center ">
      <!-- Logo -->
      <div class="flex items-center mx-auto">
        {% cache %}
            <a href="/">
              {# {% include '_includes/logo.svg' %} #}
              <img class="h-32 w-auto" src="/images/logo-fff.png" alt="Stuff Your Kindle: Crime Edition logo">
            </a>
        {% endcache %}
      </div>


  </header>
  <!-- Navigation Items -->
  {% macro navButton(href, label, customClasses) %}
  <a href="{{ href }}" class="bg-yellow-300 hover:bg-gray-300 uppercase xs:font-bold md:font-black xs:px-1 md:px-2 lg:px-4 xs:py-1 lg:py-2 xs:text-xs md:text-sm lg:text-lg {{ customClasses }}">
    {{ label }}
  </a>
{% endmacro %}

<nav class="flex flex-wrap items-center justify-center space-x-4">
  <div id="filterToggle" class="filter-item flex items-center">
    <a href="#" class="flex items-center bg-yellow-300 hover:bg-gray-300 uppercase xs:font-bold md:font-black xs:px-1 md:px-2 lg:px-4 xs:py-1 lg:py-2 xs:text-xs md:text-sm lg:text-lg">
      <span class="h-5 w-5 mr-2">
        {{ source('_includes/slider-icon.svg')|raw }}
      </span>
      Filter
    </a>
  </div>
  
  
  <!-- Genres Dropdown -->
  <div class="nav-item relative group flex items-center">
    {{ _self.navButton('/search', 'GENRES', '') }}
    <!-- Dropdown Menu -->
    <div class="dropdown absolute top-full left-0 bg-white shadow-lg opacity-0 group-hover:opacity-100 group-hover:translate-y-1 transition-all duration-300 ease-in-out z-10">
      <ul class="p-2 rounded-md">
        {% set categories = craft.categories.group('genre').all() %}
        {% for category in categories %}
          {% set entryCount = craft.entries().section('books').relatedTo(category).limit(1).count() %}
          {% if entryCount > 0 %}
            <li><a href="{{ category.url }}" class="text-sm block px-4 py-2 hover:bg-yellow-300 uppercase">{{ category.title }}</a></li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
  </div>

  <!-- Other Buttons -->
  <div class="nav-item flex items-center">
    {{ _self.navButton('/authors', 'For Authors', '') }}
  </div>
  {#
  <div class="nav-item flex items-center">
    {{ _self.navButton('/email', 'Alerts', '') }}
  </div>
  #} 
  <div class="nav-item flex items-center">
    {{ _self.navButton('/about', 'About', '') }}
  </div>

</nav>



  
</div>