<header class="bg-white shadow-md xs:px-2 lg:px-6 xs:py-2 pd:py-6 lg:py-8">
    <div class="container mx-auto flex justify-between items-center">
      <!-- Logo -->
      <div class="flex items-center">
        {% cache %}
            <a href="/">
              {# {% include '_includes/logo.svg' %} #}
              <img class="h-20 w-auto" src="/images/logo.png" alt="">
            </a>
        {% endcache %}
      </div>
      
  
      <!-- Hamburger Menu Icon (Mobile Only) -->
      <div class="hamburger flex flex-col space-y-1 cursor-pointer md:hidden" onclick="toggleMenu()">
        <span class="block w-8 h-1 bg-yellow-300"></span>
        <span class="block w-8 h-1 bg-yellow-300"></span>
        <span class="block w-8 h-1 bg-yellow-300"></span>
      </div>
  
      <!-- Navigation Items -->
      <nav class="nav-items hidden md:flex space-x-6">
        <div class="nav-item relative group">
          <a href="/" class="bg-yellow-300 font-bold px-4 py-2 text-sm md:text-sm lg:text-lg">GENRES</a>
          <!-- Dropdown Menu -->
          <div class="dropdown absolute opacity-0 group-hover:opacity-100 mt-2 transition-opacity duration-300 ease-in-out z-10">
            <ul>
              {% set categories = craft.categories.group('genre').all() %}
              {% for category in categories %}
                {% set entryCount = craft.entries().section('books').relatedTo(category).limit(1).count() %}
                {% if entryCount > 0 %}
                  <li><a href="{{ category.url }}" class="block px-4 py-2 hover:bg-yellow-300 uppercase">{{ category.title }}</a></li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        </div>
        <a href="/authors" class="bg-yellow-300 font-bold px-4 py-2 text-sm md:text-sm lg:text-lg">AUTHORS</a>
        <a href="/email" class="bg-yellow-300 font-bold px-4 py-2 text-sm md:text-sm lg:text-lg">ALERTS</a>
        <a href="/about" class="bg-yellow-300 font-bold px-4 py-2 text-sm md:text-sm lg:text-lg">ABOUT</a>
        <a href="#" class="bg-yellow-300 px-4 py-2 text-sm md:text-base lg:text-lg" id="filterToggle">{{ source('_includes/slider-icon.svg')|raw }}</a>


      </nav>
    </div>
  </header>
  