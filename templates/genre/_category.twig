{% extends '_layouts/base' %}

{% block content %}
<div class="xs:mx-6 md:mx-auto sm:container my-12">
    <h1 class="xs:text-md md:text-xl lg:text-3xl text-bold font-black text-center uppercase bg-yellow-300 lg:px-4 lg:py-2 xs:px-2 xs:py-1 inline-block mb-12">{{ category.title }}</h1>
  
    {% if category.description %}
        <p class="text-gray-700 mb-4">{{ category.description }}</p>
    {% endif %}

    {% cache globally using key category.id for 1 hour %}
    {% set entries = craft.entries()
      .section('books')
      .relatedTo(category)
      .all() %}
  

        {% if entries|length %}
            <div class="entry-list">
                {% for entry in entries %}
                    {% include "_includes/book" %}
                {% endfor %}
            </div>
        {% else %}
            <p>No entries found in this category.</p>
        {% endif %}


</div>

{% endcache %}
{% endblock %}
