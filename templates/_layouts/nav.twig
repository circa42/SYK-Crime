<header class="bg-white shadow-md mb-8 xs:px-2 lg:px-6 xs:py-2 pd:py-6 lg:py-8 bg-no-repeat bg-cover bg-[url('/images/header-bkg.jpg')]">
    <div class="container mx-auto flex justify-between items-center ">
      <!-- Logo -->
      <div class="flex items-center mx-auto">
        {% cache %}
            <a href="/">
              {# {% include '_includes/logo.svg' %} #}
              <img class="h-32 w-auto" src="/images/logo-fff.png" alt="Stuff Your Kindle: Crime Edition logo">
            </a>
        {% endcache %}
      </div>


  </header>
  <!-- Navigation Items -->
  <nav class="flex items-center justify-center nav-items md:flex xs:space-x-1 md:space-x-3 lg:space-x-6">
    <div class="nav-item relative group">

      <a href="/" class="bg-yellow-300 uppercase xs:font-bold md:font-black xs:px-1 md:px-2 lg:px-4 xs:py-1 lg:py-2 xs:text-xs md:text-sm lg:text-lg">GENRES</a>
      <!-- Dropdown Menu -->
      <div class="dropdown absolute opacity-0 group-hover:opacity-100 mt-2 transition-opacity duration-300 ease-in-out z-10">
        <ul>
          {% set categories = craft.categories.group('genre').all() %}
          {% for category in categories %}
            {% set entryCount = craft.entries().section('books').relatedTo(category).limit(1).count() %}
            {% if entryCount > 0 %}
              <li><a href="{{ category.url }}" class="text-sm block px-4 py-2 hover:bg-yellow-300 uppercase">{{ category.title }}</a></li>
            {% endif %}
          {% endfor %}
        </ul>
      </div>
    </div>
    <a href="/authors" class="bg-yellow-300 uppercase xs:font-bold md:font-black xs:px-1 md:px-2 lg:px-4 xs:py-1 lg:py-2 xs:text-xs md:text-sm lg:text-lg">
      Authors
    </a>
    <a href="/email" class="bg-yellow-300 uppercase xs:font-bold md:font-black xs:px-1 md:px-2 lg:px-4 xs:py-1 lg:py-2 xs:text-xs md:text-sm lg:text-lg">
      Alerts
    </a>
    <a href="/about" class="bg-yellow-300 uppercase xs:font-bold md:font-black xs:px-1 md:px-2 lg:px-4 xs:py-1 lg:py-2 xs:text-xs md:text-sm lg:text-lg">
      About
    </a>
      <a href="#" id="filterToggle" class="h-5 w-5">
        {{ source('_includes/slider-icon.svg')|raw }}  
      </a>
  </nav>
</div>