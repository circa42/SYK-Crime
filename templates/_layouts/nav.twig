<header class="bg-white shadow-md py-4">
    <div class="container mx-auto flex justify-between items-center px-6">
      <!-- Logo -->
      <div class="logo flex items-center">
        {% cache %}
          <div class="">
            {% include '_includes/logo.svg' %}
          </div>
        {% endcache %}
      </div>
      
  
      <!-- Hamburger Menu Icon (Mobile Only) -->
      <div class="hamburger flex flex-col space-y-1 cursor-pointer md:hidden" onclick="toggleMenu()">
        <span class="block w-8 h-1 bg-yellow-300"></span>
        <span class="block w-8 h-1 bg-yellow-300"></span>
        <span class="block w-8 h-1 bg-yellow-300"></span>
      </div>
  
      <!-- Navigation Items -->
      <nav class="nav-items hidden md:flex space-x-6">
        <div class="nav-item relative group">
          <a href="#" class="bg-yellow-300 text-black font-bold px-4 py-2">GENRES</a>
          <!-- Dropdown Menu -->
          <div class="dropdown absolute opacity-0 group-hover:opacity-100 mt-2 transition-opacity duration-300 ease-in-out z-10">
            <ul>
              {% set categories = craft.categories.group('genre').all() %}
              {% for category in categories %}
                {% set entryCount = craft.entries().section('books').relatedTo(category).limit(1).count() %}
                {% if entryCount > 0 %}
                  <li><a href="{{ category.url }}" class="block px-4 py-2 hover:bg-gray-100">{{ category.title }}</a></li>
                {% endif %}
              {% endfor %}
            </ul>
          </div>
        </div>
        <a href="#" class="bg-yellow-300 text-black font-bold px-4 py-2">FOR AUTHORS</a>
        <a href="#" class="bg-yellow-300 text-black font-bold px-4 py-2">EMAIL ALERTS</a>
        <a href="#" class="bg-yellow-300 text-black font-bold px-4 py-2">ABOUT</a>
      </nav>
    </div>
  </header>
  